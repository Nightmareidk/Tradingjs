<main class="container py-5">
  <div class="row">
    <!-- Filters Sidebar -->
    <div class="col-md-3 mb-4">
      <div class="card shadow-sm">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center mb-3">
            <h3 class="h5 mb-0">Filters</h3>
            <button class="btn btn-sm btn-link">Reset</button>
          </div>
          
          <div class="mb-3">
            <label class="form-label fw-medium">Category</label>
            <select class="form-select">
              <option selected>All Categories</option>
              <option value="pokemon">Pok√©mon</option>
              <option value="magic">Magic: The Gathering</option>
              <option value="yugioh">Yu-Gi-Oh!</option>
              <option value="sports">Sports Cards</option>
            </select>
          </div>
          
          <div class="mb-3">
            <label class="form-label fw-medium">Rarity</label>
            <select class="form-select">
              <option selected>All Rarities</option>
              <option value="common">Common</option>
              <option value="uncommon">Uncommon</option>
              <option value="rare">Rare</option>
              <option value="ultra-rare">Ultra Rare</option>
              <option value="secret-rare">Secret Rare</option>
            </select>
          </div>
          
          <div class="mb-3">
            <label class="form-label fw-medium">Price Range</label>
            <select class="form-select">
              <option selected>Any Price</option>
              <option value="under-100">Under $100</option>
              <option value="100-500">$100 - $500</option>
              <option value="500-1000">$500 - $1,000</option>
              <option value="1000-5000">$1,000 - $5,000</option>
              <option value="over-5000">Over $5,000</option>
            </select>
          </div>
          
          <div>
            <label class="form-label fw-medium">Availability</label>
            <select class="form-select">
              <option selected>All Items</option>
              <option value="in-stock">In Stock Only</option>
            </select>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Cards Grid -->
    <div class="col-md-9">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">All Cards</h1>
        <div class="d-flex align-items-center gap-2">
          <button class="btn btn-outline-secondary d-md-none">
            <i class="bi bi-funnel"></i>
          </button>
          <select class="form-select" style="width: auto;">
            <option selected>Sort by: Featured</option>
            <option value="price-low">Price: Low to High</option>
            <option value="price-high">Price: High to Low</option>
            <option value="newest">Newest First</option>
          </select>
        </div>
      </div>
      
      <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 g-4">
        <% cards.forEach(card => { %>
          <div class="col">
            <div class="card h-100 shadow-sm">
              <div class="position-relative">
                <img src="<%= card.image %>" alt="<%= card.name %>" class="card-img-top" style="height: 250px; object-fit: cover;">
                <% if (!card.inStock) { %>
                  <div class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center justify-content-center bg-white bg-opacity-75">
                    <span class="badge bg-danger px-3 py-2 fs-6">Sold Out</span>
                  </div>
                <% } %>
              </div>
              <div class="card-body">
                <h5 class="card-title text-truncate"><%= card.name %></h5>
                <div class="d-flex justify-content-between mt-2">
                  <span class="badge bg-secondary"><%= card.category %></span>
                  <span class="badge bg-light text-dark border"><%= card.rarity %></span>
                </div>
              </div>
              <div class="card-footer d-flex justify-content-between align-items-center">
                <span class="fw-bold">$<%= card.price.toLocaleString() %></span>
                <% if (card.inStock) { %>
                  <span class="badge bg-success">Available</span>
                <% } else { %>
                  <span class="badge bg-secondary">Out of Stock</span>
                <% } %>
              </div>
              <a href="/cards/<%= card.id %>" class="stretched-link"></a>
            </div>
          </div>
        <% }); %>
      </div>
      
      <div class="d-flex justify-content-center mt-5">
        <nav aria-label="Page navigation">
          <ul class="pagination">
            <li class="page-item disabled">
              <a class="page-link" href="#" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
              </a>
            </li>
            <li class="page-item active"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item">
              <a class="page-link" href="#" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
              </a>
            </li>
          </ul>
        </nav>
      </div>
    </div>
  </div>
</main>